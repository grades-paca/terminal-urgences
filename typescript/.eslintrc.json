{
    "root": true,
    "extends": [
        "react-app",
        "react-app/jest",
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "no-console": "warn",
        "no-debugger": "warn",
        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
        "@typescript-eslint/no-explicit-any": "warn",
        "react-hooks/exhaustive-deps": "warn"
    }
}
